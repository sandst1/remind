# Remind - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Provider Selection
# =============================================================================
# LLM provider for consolidation/reflection
# Options: anthropic, openai, azure_openai, ollama
LLM_PROVIDER=openai

# Embedding provider for semantic retrieval
# Options: openai, azure_openai, ollama
EMBEDDING_PROVIDER=openai

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=sk-...

# =============================================================================
# Anthropic Configuration (Claude)
# =============================================================================
# Note: Anthropic provides LLM only. Pair with OpenAI or Ollama for embeddings.
ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# Azure OpenAI Configuration
# =============================================================================
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_BASE_URL=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-small

# =============================================================================
# Ollama Configuration (Local)
# =============================================================================
# No API keys required. Install Ollama and pull models:
#   ollama pull llama3.2
#   ollama pull nomic-embed-text
OLLAMA_URL=http://localhost:11434
OLLAMA_LLM_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# =============================================================================
# Server Configuration
# =============================================================================
# Port for the MCP server (default: 8765)
# REMIND_PORT=8765
